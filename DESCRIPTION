Package: codefolder
Title: Enable per-page code-folding for Bookdown and Distill
Version: 0.0.0.9000
Authors@R:  c(
    person(
      given = "Ian J",
      family = "Lyttle",
      role = c("aut", "cre"),
      email = "ian.lyttle@schneider-electric.com",
      comment = c(ORCID = "0000-0001-9962-4849")
